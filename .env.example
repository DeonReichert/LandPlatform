# ========================================
# Confidential Land Platform - Environment Configuration
# ========================================

# ----------------------------------------
# Frontend Configuration
# ----------------------------------------

# WalletConnect Project ID (Required for wallet connection)
# Get from: https://cloud.walletconnect.com
# Create a new project and copy the Project ID
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Contract Address (Sepolia Testnet)
# Current deployment: 0xba4FB3D706a6754FFbcF9B01Cc3176F003343d11
VITE_CONTRACT_ADDRESS=0xba4FB3D706a6754FFbcF9B01Cc3176F003343d11

# ----------------------------------------
# Smart Contract Deployment Configuration
# ----------------------------------------

# Private Key for Deployment (NEVER COMMIT THIS!)
# Export from MetaMask: Account Details > Export Private Key
# Remove the '0x' prefix
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Infura Project ID (Required for Sepolia deployment)
# Get from: https://infura.io/
# Create a new project and copy the Project ID
INFURA_PROJECT_ID=your_infura_project_id_here

# Sepolia RPC URL (Alternative to Infura)
# You can use public RPC: https://sepolia.infura.io/v3/YOUR-PROJECT-ID
# Or use: https://rpc.sepolia.org (public, rate limited)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id_here

# ----------------------------------------
# Contract Verification (Etherscan)
# ----------------------------------------

# Etherscan API Key (Required for contract verification)
# Get from: https://etherscan.io/myapikey
# Sign up and create an API key
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ----------------------------------------
# PauserSet Configuration (Smart Contract Constructor)
# ----------------------------------------

# Pauser Addresses (Comma-separated list)
# These addresses have permission to pause the contract in emergency
# Example: 0xYourAddress1,0xYourAddress2,0xYourAddress3
# Minimum: 1 address required
# Format: No spaces, comma-separated
PAUSER_ADDRESSES=0x1234567890123456789012345678901234567890

# City Planning Authority Address (Contract Owner)
# This address will have administrative privileges
# Should be a secure multi-sig wallet in production
CITY_PLANNING_AUTHORITY=0x1234567890123456789012345678901234567890

# KMS Generation (FHEVM Configuration)
# KMS (Key Management Service) version for FHEVM
# Current version: 1
# Do not change unless instructed by Zama documentation
KMS_GENERATION=1

# ----------------------------------------
# Gas Reporter Configuration (Optional)
# ----------------------------------------

# Enable gas reporting in tests
# Set to 'true' to generate gas usage reports
REPORT_GAS=false

# CoinMarketCap API Key (Optional, for USD gas cost estimation)
# Get from: https://pro.coinmarketcap.com/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Output file for gas report
REPORT_GAS_FILE=gas-report.txt

# ----------------------------------------
# Testing Configuration
# ----------------------------------------

# Test Network (sepolia or hardhat)
TEST_NETWORK=hardhat

# Test Timeout (milliseconds)
TEST_TIMEOUT=120000

# ----------------------------------------
# Security Configuration
# ----------------------------------------

# Enable security audits in CI/CD
SECURITY_AUDIT_ENABLED=true

# Maximum pending transactions (DoS protection)
MAX_PENDING_TRANSACTIONS=5

# Rate limit cooldown (milliseconds)
RATE_LIMIT_COOLDOWN=1000

# ----------------------------------------
# Performance Configuration
# ----------------------------------------

# Bundle size warning limit (KB)
CHUNK_SIZE_WARNING_LIMIT=600

# Enable bundle analysis
ANALYZE_BUNDLE=false

# ----------------------------------------
# Development Configuration
# ----------------------------------------

# Node environment (development, production, test)
NODE_ENV=development

# Development server port
VITE_PORT=5173

# Enable source maps in production (NOT RECOMMENDED for security)
VITE_SOURCEMAP=false

# ----------------------------------------
# Network Configuration
# ----------------------------------------

# Sepolia Testnet Configuration
SEPOLIA_CHAIN_ID=11155111
SEPOLIA_NETWORK_NAME=Sepolia

# Sepolia Faucets (for getting test ETH)
# - https://sepoliafaucet.com/
# - https://www.infura.io/faucet/sepolia
# - https://faucet.quicknode.com/ethereum/sepolia

# ----------------------------------------
# IMPORTANT SECURITY NOTES
# ----------------------------------------
# 1. NEVER commit .env file to version control
# 2. NEVER share your PRIVATE_KEY with anyone
# 3. Use different keys for development and production
# 4. Keep your API keys secure and rotate them regularly
# 5. Use a hardware wallet or multi-sig for production deployments
# 6. Review all addresses before deployment
# 7. Test on Sepolia before mainnet deployment

# ----------------------------------------
# Setup Instructions
# ----------------------------------------
# 1. Copy this file: cp .env.example .env
# 2. Fill in all required values (marked as required above)
# 3. Never commit the .env file (it's in .gitignore)
# 4. Verify all addresses and keys before deployment
# 5. Run: npm run compile to test configuration
# 6. Run: npm run deploy to deploy to Sepolia
